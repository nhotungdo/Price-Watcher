    <script>
        (function () {
            const input = document.getElementById('headerSearch');
            const submitBtn = document.getElementById('searchSubmitBtn');
            const dropdown = document.getElementById('searchAutocomplete');
            const content = dropdown ? dropdown.querySelector('.autocomplete-content') : null;
            const preview = dropdown ? dropdown.querySelector('.preview-content') : null;

            function debounce(fn, ms) { let t; return (...args) => { clearTimeout(t); t = setTimeout(() => fn.apply(this, args), ms); }; }

            async function fetchAutocomplete(q) {
                try {
                    const res = await fetch(`/search/autocomplete?q=${encodeURIComponent(q)}`);
                    const data = await res.json();
                    if (!data || data.length === 0) { if (dropdown) dropdown.style.display = 'none'; return; }
                    if (content) {
                        content.innerHTML = data.map(x => `<div class="p-2 autocomplete-item" data-id="${x.id}" data-name="${x.name}">${x.name}</div>`).join('');
                    }
                    if (preview) { preview.innerHTML = ''; }
                    if (dropdown) { dropdown.style.display = 'block'; }
                    if (content) {
                        content.querySelectorAll('.autocomplete-item').forEach(el => {
                            el.addEventListener('click', () => {
                                if (input) input.value = el.dataset.name || '';
                                if (dropdown) dropdown.style.display = 'none';
                            });
                        });
                    }
                } catch { if (dropdown) dropdown.style.display = 'none'; }
            }

            async function fetchPreview(q) {
                try {
                    const res = await fetch(`/search/preview?q=${encodeURIComponent(q)}&top=5`);
                    const items = await res.json();
                    if (!items || items.length === 0) { if (dropdown) dropdown.style.display = 'none'; return; }
                    if (content) { content.innerHTML = ''; }
                    if (preview) {
                        preview.innerHTML = items.map(i => `
                            <a href="/ProductDetail/${i.productId || ''}" class="text-decoration-none d-flex align-items-center gap-2 p-2">
                                <img src="${i.thumbnailUrl || i.image || i.imageUrl || '/images/placeholder.png'}" style="width:40px;height:40px;object-fit:cover;" alt="">
                                <div class="flex-grow-1">
                                    <div class="small">${i.platform || i.platformName || ''}</div>
                                    <div class="fw-semibold" style="display:-webkit-box;-webkit-line-clamp:1;-webkit-box-orient:vertical;overflow:hidden;">${i.title || i.productName || ''}</div>
                                    <div class="text-danger">${new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format((i.price || i.totalCost || 0))}</div>
                                </div>
                            </a>
                        `).join('');
                    }
                    if (dropdown) { dropdown.style.display = 'block'; }
                } catch { if (dropdown) dropdown.style.display = 'none'; }
            }

            function isUrlLike(text) { try { const u = new URL(text); return ['shopee', 'lazada', 'tiki'].some(d => u.host.includes(d)); } catch { return false; } }

            if (input) {
                input.addEventListener('input', debounce(async function (e) {
                    const q = e.target.value.trim();
                    if (!q) { if (dropdown) dropdown.style.display = 'none'; return; }
                    if (isUrlLike(q)) { await fetchPreview(q); return; }
                    await fetchAutocomplete(q);
                }, 250));
            }

            document.addEventListener('click', function (e) { if (dropdown && !dropdown.contains(e.target) && input && !input.contains(e.target)) { dropdown.style.display = 'none'; } });

            function navigateToSearch() {
                const q = input ? input.value.trim() : '';
                if (!q) return;
                const target = new URL(window.location.origin + '/search/results');
                target.searchParams.set('q', q);
                window.location.href = target.toString();
            }

            if (submitBtn) { submitBtn.addEventListener('click', function () { navigateToSearch(); }); }

            if (input) {
                input.addEventListener('keydown', function (e) {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        navigateToSearch();
                    }
                });
            }

            const inputGroup = document.getElementById('searchInputGroup');
            if (inputGroup) {
                inputGroup.addEventListener('dragover', function (e) { e.preventDefault(); inputGroup.classList.add('border', 'border-primary'); });
                inputGroup.addEventListener('dragleave', function () { inputGroup.classList.remove('border', 'border-primary'); });
                inputGroup.addEventListener('drop', async function (e) {
                    e.preventDefault(); inputGroup.classList.remove('border', 'border-primary');
                    const file = e.dataTransfer && e.dataTransfer.files && e.dataTransfer.files[0];
                    if (!file) return;
                    const ok = ['image/jpeg', 'image/png', 'image/gif', 'image/webp'].includes(file.type);
                    if (!ok) return;
                    const form = new FormData(); form.append('image', file, file.name);
                    const res = await fetch('/search/submit', { method: 'POST', body: form });
                    const json = await res.json().catch(() => null);
                    const id = json && json.searchId;
                    if (!id) { return; }
                    const reader = new FileReader(); reader.onload = function () { if (dropdown && preview) { dropdown.style.display = 'block'; preview.innerHTML = `<img src="${reader.result}" style="max-height:120px;object-fit:contain;" alt="">`; } };
                    reader.readAsDataURL(file);
                    let tries = 0;
                    const poll = setInterval(async () => {
                        tries++; if (tries > 20) { clearInterval(poll); return; }
                        const s = await fetch(`/search/status/${id}`);
                        const st = await s.json().catch(() => null);
                        const items = (st && st.results) || [];
                        if (items.length > 0) {
                            clearInterval(poll);
                            if (preview) {
                                preview.innerHTML = items.slice(0, 5).map(i => `
                                    <a href="/ProductDetail/${i.productId || ''}" class="text-decoration-none d-flex align-items-center gap-2 p-2">
                                        <img src="${i.thumbnailUrl || i.image || i.imageUrl || '/images/placeholder.png'}" style="width:40px;height:40px;object-fit:cover;" alt="">
                                        <div class="flex-grow-1">
                                            <div class="small">${i.platform || i.platformName || ''}</div>
                                            <div class="fw-semibold" style="display:-webkit-box;-webkit-line-clamp:1;-webkit-box-orient:vertical;overflow:hidden;">${i.title || i.productName || ''}</div>
                                            <div class="text-danger">${new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format((i.price || i.totalCost || 0))}</div>
                                        </div>
                                    </a>
                                `).join('');
                            }
                        }
                    }, 500);
                });
            }
        })();
    </script>
    <script src="~/js/tiki-ui.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

