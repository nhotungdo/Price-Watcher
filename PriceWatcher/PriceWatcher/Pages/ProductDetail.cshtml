@page "{id:int}"
@model PriceWatcher.Pages.ProductDetailModel
@{
    ViewData["Title"] = Model.Product.ProductName;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
            <li class="breadcrumb-item active" aria-current="page">Chi tiết sản phẩm</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-4">
            <img src="@Model.Product.ImageUrl" class="img-fluid rounded shadow-sm" alt="@Model.Product.ProductName" style="width:100%; object-fit:cover;">
        </div>
        <div class="col-md-8">
            <h1 class="h3">@Model.Product.ProductName</h1>
            <div class="mb-3">
                <span class="badge bg-primary">@Model.Product.Platform?.PlatformName</span>
                <span class="text-muted">Shop: @Model.Product.ShopName</span>
            </div>
            <h2 class="text-danger fw-bold">@Model.Product.CurrentPrice?.ToString("N0") ₫</h2>
            
            <div class="mt-4">
                <a href="@Model.Product.OriginalUrl" target="_blank" class="btn btn-lg btn-primary">Tới nơi bán</a>
            </div>

            <div class="mt-5">
                <h4>Lịch sử giá</h4>
                <canvas id="priceChart"></canvas>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('priceChart').getContext('2d');
        const historyData = @Html.Raw(Model.PriceHistoryJson);
        
        const labels = historyData.map(d => new Date(d.t).toLocaleDateString('vi-VN'));
        const data = historyData.map(d => d.y);

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Giá sản phẩm (VNĐ)',
                    data: data,
                    borderColor: 'rgb(255, 99, 132)',
                    tension: 0.1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: false
                    }
                }
            }
        });
    </script>
}
