@page "{id:int}"
@model PriceWatcher.Pages.Admin.Products.EditModel
@{
    ViewData["Title"] = "Sửa sản phẩm";
}

<div class="container py-3">
    <h2 class="mb-3">Sửa sản phẩm</h2>
    <form method="post">
        <div class="row g-3">
            <div class="col-lg-8">
                <div class="mb-3">
                    <label class="form-label">Tên sản phẩm</label>
                    <input asp-for="Input.ProductName" class="form-control" />
                    <span asp-validation-for="Input.ProductName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Mô tả</label>
                    <textarea asp-for="Input.Description" rows="5" class="form-control"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Giá hiện tại (VNĐ)</label>
                    <input asp-for="Input.CurrentPrice" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">URL sản phẩm Tiki.vn</label>
                    <input asp-for="Input.OriginalUrl" class="form-control" />
                    <span asp-validation-for="Input.OriginalUrl" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="mb-3">
                    <label class="form-label">Ảnh URL</label>
                    <input asp-for="Input.ImageUrl" class="form-control" />
                </div>
            </div>
        </div>
        <div class="mt-3 d-flex gap-2">
            <button class="btn btn-primary" type="submit">Lưu sản phẩm</button>
            <a asp-page="Index" class="btn btn-outline-secondary">Hủy</a>
            <a href="@Model.Input?.OriginalUrl" target="_blank" rel="noopener" class="btn btn-link">Mở trang Tiki</a>
        </div>
    </form>
</div>