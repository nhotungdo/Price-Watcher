    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=PriceWatcher;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Authentication": {
    "Google": {
      "ClientId": "<GOOGLE_CLIENT_ID>",
